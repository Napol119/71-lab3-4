SELECT 
    employee_id,
    CONCAT(first_name, ' ') || UPPER(SUBSTR(last_name, 1, 2)) AS full_name,
    hire_date
FROM 
    employees
WHERE 
    hire_date >= DATE '2003-01-01'
ORDER BY 
    hire_date
